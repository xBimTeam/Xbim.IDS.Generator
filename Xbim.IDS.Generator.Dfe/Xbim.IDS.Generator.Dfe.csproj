  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\Xbim.IDS.Generator\Xbim.IDS.Generator.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <None Update="Dfe\Content\ADS_Codes.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Dfe\Content\Dfe_Naming.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Dfe\Content\Dfe_Zones.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
